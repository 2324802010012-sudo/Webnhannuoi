@model Webnhannuoi.Models.ThuCung
@{
    ViewData["Title"] = "Chi tiết thú cưng";
}
<div class="container py-4">
    <div class="row g-4">
        <div class="col-md-6">
            <img src="~/ImagesNhannuoi/@Model.Anh" alt="@Model.TenThuCung"
                 class="img-fluid rounded-4 shadow-sm" style="max-height:480px;object-fit:cover;">
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold mb-2" style="color:#5BC0EB;">@Model.TenThuCung</h2>
            <p class="text-muted mb-2">🐾 @Model.MaLoaiNavigation?.TenLoai • @Model.GioiTinh • @(Model.Tuoi) tuổi</p>
            <p class="mb-3">@Model.MoTa</p>

            <a class="btn me-2" style="background:#5BC0EB;color:#fff;border-radius:10px;"
               asp-controller="DonNhanNuoi" asp-action="Create" asp-route-petId="@Model.MaThuCung">
                Nhận nuôi bé này
            </a>
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Quay lại</a>
        </div>
    </div>
</div>
